{
	"image": "swift:5.10",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"username": "vscode",
			"userUid": "1000",
			"userGid": "1000",
			"installZsh": "false",
			"upgradePackages": "false"
		},
		"ghcr.io/devcontainers/features/git:1": {
			"version": "os-provided",
			"ppa": "false"
		}
	},
	"remoteUser": "vscode",
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"customizations": {
		"vscode": {
			"settings": {
				"lldb.library": "/usr/lib/liblldb.so"
			},
			"extensions": [
				"sswg.swift-lang"
			]
		}
	}
}
